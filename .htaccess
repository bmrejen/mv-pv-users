AuthUserFile /usr/local/apache2/htdocs/src/app/assets/index-password/.htpasswd
AuthType Basic
AuthName "My restricted Area"
Require valid-user

RewriteEngine On
RewriteBase /
RewriteRule ^index\.html$ - [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.html [L]
